<style>
    * {
        margin: 0px;
        font-family: "Stack Sans Headline", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
    }


    .item-container {
        background: #292929;
        color: white;
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 7px 0 7px 10px;
        border-radius: 10px;
    }

    .secondary-info-container {
        display: flex;
        gap: 10px;
    }

    .time-container {
        display: flex;
        align-items: center;
        gap: 5px;
        background: #008e92;
        padding: 2px 10px;
        border-radius: 4px;
    }

    .counter-container {
        border: solid 1px #0006b8;
        padding: 2px 10px;
        border-radius: 4px;
    }

    .location-container {
        display: flex;
        gap: 5px;
        align-items: center;
    }
</style>

