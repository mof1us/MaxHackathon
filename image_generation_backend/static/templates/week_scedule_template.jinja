<style>
    * {
        margin: 0px;
        font-family: "Stack Sans Headline", sans-serif;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
        color: white;
    }

    .item-container {
        background: #292929;
        color: white;
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 7px 0 7px 10px;
        border-radius: 10px;
    }

    .secondary-info-container {
        display: flex;
        gap: 10px;

    }

    .time-container {
        display: flex;
        align-items: center;
        gap: 5px;
        background: #008e92;
        padding: 2px 10px;
        border-radius: 4px;
    }

    .counter-container {
        border: solid 1px #0006b8;
        padding: 2px 10px;
        border-radius: 4px;
    }

    .location-container {
        display: flex;
        gap: 5px;
    }


    .items-list {
        display: flex;

        flex-direction: column;
        gap: 5px;
        padding: 10px;

        border-radius: 10px;
    }

    .day-container {
        width: 100%;
        height: 100%;
        background: #1c1c1c;
    }

    .weekday-header{
        text-align: center;
        font-weight: bold;
        font-size: 30px;
    }

    .schedule-header{
        text-align: center;
        font-weight: bold;
        font-size: 35px;
        padding: 10px 0 10px 0;
    }

    .week-container{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-template-rows: 1fr 1fr;
        background: #1c1c1c;
    }
</style>
<div class="day-container">
    <h2 class="schedule-header">{{ name }}</h2>
    <div class="week-container">
        {% for day in days %}
            {% with day_item=day %}
                {% include "schedule_day_template.jinja" %}
            {% endwith %}
        {% endfor %}
    </div>
</div>

